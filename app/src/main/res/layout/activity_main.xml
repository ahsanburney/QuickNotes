<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ahsanburney.quicknotes.MainActivity">


    <TextView
        android:text="@string/lastupdated"
        android:layout_width="225dp"
        android:layout_height="35dp"
        android:id="@+id/lastupdated"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textAlignment="center" />

    <EditText
        android:layout_width="329dp"
        android:layout_height="406dp"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:ems="10"
        android:id="@+id/main_notes"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/lastupdated"
        android:background="@drawable/notes_border"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:text="@string/displaynotes"
        tools:ignore="LabelFor"
        android:gravity="top|start"
        android:scrollbars="vertical" />

    <TextView
        android:text="@string/addtext"
        android:padding="1dp"
        android:layout_width="128dp"
        android:layout_height="35dp"
        android:id="@+id/textView2"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/lastupdated"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.13"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />
</android.support.constraint.ConstraintLayout>
